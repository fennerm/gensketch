{
  "extends": "./.svelte-kit/tsconfig.json",
  "exclude": [
    "src/testUtill/**",
    "**/*.test.ts",
  ],
  "compilerOptions": {
    "module": "ES2022",
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@lib": ["src/lib"],
      "@lib/*": ["src/lib/*"]
    }
  }
}
