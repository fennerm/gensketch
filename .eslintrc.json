{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2021,
    "project": "./tsconfig.json",
    "extraFileExtensions": [".svelte"]
  },
  "overrides": [
    {
      "files": ["*.svelte"],
      "parser": "svelte-eslint-parser",
      "parserOptions": {
        "parser": "@typescript-eslint/parser"
      }
    }
  ],
  "plugins": ["@typescript-eslint", "eslint-plugin-node", "compat", "eslint-plugin-import"],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/eslint-recommended",
    "plugin:compat/recommended",
    "plugin:svelte/recommended"
  ],
  "env": {
    "browser": true
  },
  "ignorePatterns": ["src-tauri", "node_modules", "dist", "build", ".svelte-kit", "vite.config.ts"],
  "rules": {
    "no-unused-vars": "off",
    "no-self-assign": "off",
    "@typescript-eslint/no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_",
        "caughtErrorsIgnorePattern": "^_"
      }
    ],
    "camelcase": "error",
    "import/order": [
      "error",
      {
        "groups": ["builtin", "external", "internal"],
        "newlines-between": "always"
      }
    ]
  },
  "settings": {
    "polyfills": ["BigInt"],
    "import/resolver": {
      "alias": {
        "map": [
          ["@lib", "./src/lib"],
          ["tauri-plugin-log-api", "node_modules/tauri-plugin-log-api/dist-js/index.mjs"]
        ],
        "extensions": [".ts", ".js", ".json", ".svelte", ".mjs"]
      }
    },
    "import/parsers": {
      "@typescript-eslint/parser": [".ts"]
    },
    "import/external-module-folders": ["node_modules", "node_modules/@types"]
  }
}
